<% if @discussion_date %>
	<% @discussion_date = time_ago_in_words(@discussion_date) %>
<% end %>
<% if @discussion.user.profile_pic? %>
  <% @userimage = asset_path(@discussion.user.profile_pic.url(:thumb)) %>
<% else %>
  <% @userimage = asset_path('default.png') %>
<% end %>
<%= react_component "DiscussionPage", { discussion: @discussion, discussions: @discussions, current_user: current_user, favorite_discussions: @favorite_discussions, tags: @tag_list, show_favorites: params[:fav], discussion_username: @discussion_username, discussion_date: @discussion_date, discussion_userimage: @userimage, responses: @responses, upvotes: @upvotes } %>
