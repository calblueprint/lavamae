<section class="discussion">
    <div class="discussion-header row">
      <% if current_user %>
        <%= button_to "Create Discussion", new_discussion_path, method: :get, class: 'btn btn-blue pull-right' %>
      <% end %>
    </div>
  <div class="container-lg">
    <div class="discussion-container row">
      <div class="discussion-item-container col-xs-12 col-md-4">
        <% @discussions.each do |d| %>
          <%= link_to discussions_path(discussion_id: d.id) do %>
            <div tabindex="4" class="discussion-item row">
              <h4 class="discussion-item-title">
                <%= d.title %>
                <div class = "discussion-item-date">
                  <% if d.created_at > Time.now.beginning_of_day %>
                      <%= time_ago_in_words(d.created_at) %> ago
                  <% else %>
                      <%= d.created_at.strftime("%b %d, %Y") %>
                  <% end %>
                </div>
              </h4>
              <p class="discussion-item-description">
                <%= d.content %>
              </p>
            </div>
          <% end %>
        <% end %>
      </div>
      <% if @discussion %>
          <%= render @discussion %>
      <% end %>
      </div>
    </div>
  </div>
</section>
