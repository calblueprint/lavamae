<div class="answer-container row">
  <div class="answer-text pull-left wordwrap">
  	<%= response.content %>
  </div>
  <div class="user-container pull-right">
    <div class="user-picture">
      <a href=""><%= image_tag response.user.profile_pic.url(:thumb) if response.user.profile_pic? %></a>
    </div>
    <div class="name-date">
      <a href=""><div class="user-name">Grace Noh</div></a>
      <div class="date"><%= time_ago_in_words(response.created_at) %> ago</div>
    </div>
  </div>
</div>

<% if current_user and current_user == response.user %>
  <%= link_to 'Edit Response', edit_discussion_response_path(response.discussion_id, response) %>
  <%= button_to 'Delete Response', discussion_response_path(response.discussion_id, response), method: :delete %>
<% end %>

