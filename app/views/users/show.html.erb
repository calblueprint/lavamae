<div class="user-profile">
  <div class="user-info">
    <div class="row user-flex">
      <div class="user-profile-fields">
        Name<br>
        Email<br>
        Organization<br>
        Location<br>
      </div>
      <div class="vertical-line">
        <div>
          <%= @user.first_name %>
          <%= @user.last_name %>
        </div>
        <%= @user.email %><br>
        <%= @user.organization %><br>
        <div>
          <%= @user.city %>,
          <%= @user.country %>
        </div>
      </div>
    </div>
    <%if current_user.id == @user.id %>
      <div class="row user-flex">
        <div>
          <%= react_component('EditProfileModal', user_id: @user.id, first_name: @user.first_name, last_name: @user.last_name, email: @user.email, organization: @user.organization, city: @user.city, country: @user.country, countries: CS.countries.values, on_map: @user.on_map) %>
        </div>
        <div>
          <%= react_component('ChangePasswordModal', user_id: @user.id) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
